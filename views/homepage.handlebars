<link rel="stylesheet" href="/public/css/jass.css">
<link rel="stylesheet" href="/public/css/style.css">
<div class="column">
  <div class="col-auto">
    <h4>{{name}}User's Bucket List!</h4>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <div class="container">
      {{#each listData as |List| }}
        <div id="BucketList">
          <h4>{{List.title}}</h4>
                {{#each List.bucketListItems as |item| }}                
                <button type ="travel-lock" class="btn btn-primary">Travel</button>
                <ul id="travel-list"></ul>
                {{#if (ifCond item.category "travel")}}
                <li>{{item.body}}</li>
                {{/if}}
                <br>
                <button type ="travel-lock" class="btn btn-primary">Food</button>
                <ul id ="food-list"></ul>
                {{#if (ifCond item.category "food")}}
                <li>{{item.body}}</li>
                {{/if}}
                <br> 
                <h3>Adrenaline</h3>
                <ul id ="adrenaline-list"></ul>
                {{#if (ifCond item.category "adrenaline")}}
                <li>{{item.body}}</li>
                <br>
                {{/if}}
                {{/each}}                
        <div>
      {{/each}}
        <button type="register" class="btn btn-primary">Login</button>
      </div>
      </div>
    </div>
      <br>
      <div id="container">
        <br>
        <button type ="generate-lock" class="btn btn-primary" id="generate">Generate</button>
                <ul id="travel-list"></ul>
      </div>
  </div>
<script src="./js/homepage.js"></script>
